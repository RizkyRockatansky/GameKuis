<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/resultbckgrnd"
    android:orientation="vertical">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/style3"
        android:textColor="@color/putih"
        android:gravity="center"
        android:text="HASIL"
        android:textSize="25sp"
        android:layout_marginTop="50dp"/>


    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="match_parent"
        android:textColor="@color/putih"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/style3"
        android:gravity="center"
        android:text="3 / 10"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/totalScoreLabel"
        android:textColor="@color/putih"
        android:fontFamily="@font/style3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Score : 619"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="60dp"/>

    <Button
        android:layout_width="match_parent"
        android:fontFamily="@font/style2"
        android:layout_height="@dimen/answerBtn_height"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:onClick="returnTop"
        android:background="@drawable/btn5"
        android:textColor="@color/putih"
        android:text="kembali"
        android:textSize="18sp" />
</LinearLayout>